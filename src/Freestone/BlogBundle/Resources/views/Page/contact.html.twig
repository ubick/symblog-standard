{% extends 'FreestoneBlogBundle::layout.html.twig' %}

{% block title %}Contact us{% endblock%}

{% block body %}

    <header>
        <h1>Contact symblog</h1>
    </header>
        
    {% if app.session.hasFlash('blogger-notice') %}
        <div class="blogger-notice">
            {{ app.session.flash('blogger-notice') }}
        </div>
    {% endif %}

    <form action="{{ path('FreestoneBlogBundle_contact') }}" method="post" class="blogger" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
        
        {{ form_row(form.name) }}    
        {{ form_row(form.age) }}    
        {{ form_row(form.email) }}    
        {{ form_row(form.subject) }}    
        {{ form_row(form.body) }}    
            
        {{ form_rest(form) }}
            
        <input type="submit" value="Submit" />
    </form>

{% endblock %}